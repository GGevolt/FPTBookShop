@page
@model ResendEmailConfirmationModel

@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <h5 class="card-header text-center">
                    <strong>Resend Email Confirmation</strong>
                </h5>
                <div class="card-body">
                    <h5 class="card-title text-center mt-3">Enter Your Email</h5>
                    <p class="card-text text-center">Please enter the email address associated with your account to resend the confirmation email.</p>

                    <form method="post" class="mt-4">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Input.Email" class="form-label">Email address</label>
                            <input asp-for="Input.Email" class="form-control form-control-lg" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg btn-block">Resend</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
