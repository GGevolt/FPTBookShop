@model Request
<h1> Create new Request</h1>
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row mb-3">
            <label asp-for="Request_Name"></label>
            <input asp-for="Request_Name">
            <span asp-validation-for="Request_Name" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Request_Description"></label>
            <input asp-for="Request_Description">
            <span asp-validation-for="Request_Description" class="text-danger"></span>
        </div>
        <div class="btn group" role="group">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="MakeRequest" asp-action="Index" class="btn btn-primary">
                Back to List
            </a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}